<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.example.kjw.mylibrary.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="도서관리" />

        <Button
            android:id="@+id/my_library_management_button"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="25dp"
            android:text="내 서재 관리" />

        <Button
            android:id="@+id/button3"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="25dp"
            android:text="그룹 스터디룸 조회" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="열람실 좌석 조회" />

        <Button
            android:id="@+id/mainHopeBookBt"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="25dp"
            android:text="희망 도서 신청" />

        <Button
            android:id="@+id/login_confirm_button"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="25dp"
            android:text="로그인" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal"
        android:weightSum="1">


        <Spinner
            android:id="@+id/spinner"
            android:entries="@array/category"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="34dp" />

        <EditText
            android:id="@+id/search_text"
            android:layout_width="153dp"
            android:layout_height="66dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="검색 키워드를 입력하세요."
            android:layout_weight="1.08" />

        <Button
            android:id="@+id/book_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="검색" />

    </LinearLayout>


</LinearLayout>
