<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="500dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sr1_name"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="[제 2도서관] 2층 1 열람실"
                android:gravity="center"
                android:layout_weight="1" />

            <Button
                android:id="@+id/sr1_button"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:text="조회" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sr2_name"
                android:layout_width="186dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="[제 2도서관] 2층 1 노트북 열람실"
                android:gravity="center" />

            <Button
                android:id="@+id/sr2_button"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:text="조회" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sr3_name"
                android:layout_width="186dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="[제 2도서관] 3층 2-1 열람실"
                android:gravity="center" />

            <Button
                android:id="@+id/sr3_button"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:text="조회" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sr4_name"
                android:layout_width="186dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="[제 2도서관] 4층 대학원 열람실"
                android:gravity="center" />

            <Button
                android:id="@+id/sr4_button"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:text="조회" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>