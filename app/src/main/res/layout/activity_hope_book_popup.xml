<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context="com.example.kjw.mylibrary.hopeBookPopupActivity"
    android:orientation="vertical">
        <TextView
            android:id="@+id/popUpTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:linksClickable="false"
            android:longClickable="true"
            android:padding="2dp"
            android:text="희망도서 신청"
            android:textColor="#ffffff"
            tools:background="#2337DE"
            tools:clickable="false" />

        <TextView
            android:id="@+id/popupBtDirectRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="직접 신청 하기" />

        <TextView
            android:id="@+id/popupBtSearchRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="도서 검색 후 신청하기" />
</LinearLayout>
