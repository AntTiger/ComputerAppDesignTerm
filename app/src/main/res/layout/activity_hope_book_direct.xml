<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kjw.mylibrary.HopeBook_DirectActivity">
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <TableLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:text="*책 이름"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/directHope_bookName"/>
            </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:text="*저자"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/directHope_author"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:text="*출판사"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/directHope_publisher"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:text="*출판년도"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/directHope_publishDate"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:text="*ISBN(13자리)"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/directHope_ISBN"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="판차" />
           <EditText
                android:layout_width="match_parent"
                android:layout_weight="1"
               android:id="@+id/directHope_pan"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:text="추정가격"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/directHope_price"/>
        </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/directHope_cancelBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"/>

            <Button
                android:id="@+id/directHope_submitBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="제출" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
